<GuiXml>
    <Controls>
        <!-- Virtual controls -->
        <Control name="scprSplitsTemplates" virtual="true" hidden="false">
            <Dimensions y="32"/>
            <Controls>
                <Label name="$(parent)SplitsName" font="ZoFontWinH2" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="LEFT"/>
                <Label name="$(parent)SplitsTime" font="ZoFontWinH3" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="LEFT"/>
            </Controls>
        </Control>
        
        <!-- Timer and Splits visualizer -->
        <TopLevelControl name="scprHudTimer" resizeToFitDescendents="true" mouseEnabled="true" movable="true" clampedToScreen="true">
            <Controls>
				<Texture name="$(parent)Icon" textureFile="/esoui/art/miscellaneous/timer_32.dds" hidden="true">
					<Anchor point="TOPLEFT" offsetX="100" offsetY="100"/>
					<Dimensions x="32" y="32"/>
				</Texture>
				<Label name="$(parent)Timer" font="ZoFontWinH2" horizontalAlignment="LEFT" verticalAlignment="CENTER" hidden="true">
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Icon" offsetX="6" offsetY="-1"/>
					<Dimensions y="24"/>
				</Label>
				<Texture name="$(parent)SplitIcon" textureFile="/esoui/art/miscellaneous/gamepad/gp_scrollarrow_up.dds" alpha="0">
					<Anchor point="TOPLEFT" offsetX="120" offsetY="136"/>
					<Dimensions x="20" y="20"/>
				</Texture>
				<Label name="$(parent)SplitTime" font="ZoFontWinH4" horizontalAlignment="LEFT" verticalAlignment="CENTER" alpha="0">
					<Anchor point="TOPLEFT" offsetX="120" offsetY="136"/>
					<Dimensions y="24"/>
				</Label>
            </Controls>
		</TopLevelControl>
    
        <!-- Main run review UI -->
        <TopLevelControl name="scprStatsUI" hidden="true">
            <Dimensions x="1152" y="1075"/>
            <Anchor point="CENTER"/>
                <Controls>
                    <!-- Background/main -->
                    <Control name="$(parent)Frame">
                        <Anchor point="CENTER"/>
                        <Controls>
                            <Texture name="$(parent)TopBG" textureFile="ScpRunner/art/PostDungeonBG1.dds" alpha="0">
                                <Anchor point="TOP"/>
                                <Dimensions x="1152" y="700"/>
                            </Texture>
                            <Texture name="$(parent)BottomBG" textureFile="ScpRunner/art/PostDungeonBG2.dds" alpha="0">
                                <Anchor point="BOTTOM"/>
                                <Dimensions x="1152" y="700"/>
                            </Texture>
                            <Texture name="$(parent)loadscreenBG" textureFile="ScpRunner/art/ScpLoadscreenCrop.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="404" y="75"/>
                            </Texture>
                            <Texture name="$(parent)TopTopDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="440" y="24"/>
                            </Texture>
                            <Texture name="$(parent)TopDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="1152" y="24"/>
                            </Texture>
                            <Texture name="$(parent)BottomDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="1152" y="24"/>
                            </Texture>
                        </Controls>
                    </Control>
                    <!-- Background/main -->

                     <!-- Time Counter -->
                    <Control name="$(parent)TimeTally">
                        <Anchor point="CENTER"/>
                        <Controls>
                            <Texture name="$(parent)Divider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="390" y="24"/>
                            </Texture>
                            <Texture name="$(parent)Icon" textureFile="/esoui/art/trials/trialpoints_veryhigh.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="54" y="54"/>
                            </Texture>
                            <Label name="$(parent)Label" font="ZoFontWinH1" text="00:00.00" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="LEFT" verticalAlignment="CENTER">
                                <Anchor point="CENTER" offsetX="500" offsetY="-425"/>
                                <Dimensions y="24"/>
                            </Label>
                       </Controls>
                    </Control>
                    <!--Time counter -->

                    <!-- Dungeon Name -->
                    <Control name="$(parent)Dungeon">
                        <Anchor point="CENTER"/>
                        <Controls>
                            <Texture name="$(parent)Icon" textureFile="/esoui/art/journal/gamepad/gp_questtypeicon_groupdungeon.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions y="64" x="64"/>
                            </Texture>
                            <Label name="$(parent)Name" font="ZoFontWinH1" text="Scalecaller Peak" horizontalAlignment="LEFT" verticalAlignment="CENTER">
                                <Anchor point="CENTER"/>
                            </Label>
                        </Controls>
                    </Control>  
                    <!-- Dungeon Name-->

                    <!-- Splits stuff-->                   
                    <Control name="$(parent)Splits">
                        <Anchor point="CENTER"/>
                        <Controls>
                            <Label name="$(parent)Label" font="ZoFontWinH1" text="Splits" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="LEFT" verticalAlignment="CENTER" >
                                <Anchor point="CENTER" offsetX="500" offsetY="-425"/>
                                <Dimensions y="24"/>
                            </Label>
                            <Texture name="$(parent)Icon" textureFile="/esoui/art/compass/repeatablequest_icon_assisted.dds">
                                <Anchor point="CENTER"/>
                                <Dimensions x="48" y="48"/>
                            </Texture>
                            <Texture name="$(parent)TopDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="230" y="24"/>
                            </Texture>
                            <Texture name="$(parent)BottomDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="230" y="24"/>
                            </Texture>
                            <Control name="$(parent)List" inherits="ZO_ScrollList">
                                <Anchor point="CENTER" offsetX="170" offsetY ="0"/>
                                <Dimensions x="230" y="570"/>
                            </Control>
                        </Controls>
                    </Control>

                    <!-- Splits stuff-->

                    <!-- Trifecta Counter -->
                    <Control name="$(parent)Trifectas">
                        <Anchor point="CENTER"/>
                        <Controls>
                            <Label name="$(parent)Label" font="ZoFontWinH1" text="Trifectas:" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="LEFT" verticalAlignment="CENTER" >
                                <Anchor point="CENTER" offsetX="500" offsetY="-425"/>
                                <Dimensions y="24"/>
                            </Label>
                            <Texture name="$(parent)Icon" textureFile="/esoui/art/menubar/gamepad/gp_playermenu_icon_achievements.dds">
                                <Anchor point="CENTER"/>
                                <Dimensions x="48" y="48"/>
                            </Texture>
                            <Texture name="$(parent)TopDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="230" y="24"/>
                            </Texture>
                            <Texture name="$(parent)BottomDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="230" y="24"/>
                            </Texture>
                        </Controls>
                    </Control>
                    <!-- Trifecta Counter-->

                    <!-- SCP Map
                     <Control name="$(parent)Map">
                        <Anchor point="CENTER"/>
                        <Controls>
                            <Texture name="$(parent)Texture" textureFile="ScpRunner/art/SCP-Map-Clean.dds" movable="true" mouseEnabled="true" alpha="0.6">
                                <Anchor point="CENTER"/>
                                <Dimensions x="350" y="672"/>
                            </Texture>
                        </Controls>
                    </Control>
                    SCP Map -->

                    <!-- Instance Resetter -->
                     <Control name="$(parent)DifficultyChanger">
                        <Anchor point="CENTER"/>
                        <Controls>
                            <Button name="$(parent)ChangeDiffButton" alpha="0">
                                <Textures 
                                normal="/esoui/art/lfg/lfg_groupfinder_refreshsearch_up.dds" 
                                mouseOver="/esoui/art/lfg/lfg_groupfinder_refreshsearch_over.dds"
                                pressed="/esoui/art/lfg/lfg_groupfinder_refreshsearch_down.dds"/>
                                <Anchor point="CENTER"/>
                                <Dimensions x="56" y="56"/>
                            </Button>
                            <Texture name="$(parent)NormalDiffActive" textureFile="/esoui/art/lfg/lfg_normaldungeon_up.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="50" y="50"/>
                            </Texture>
                            <Texture name="$(parent)NormalDiffInactive" textureFile="/esoui/art/lfg/lfg_normaldungeon_disabled.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="50" y="50"/>
                            </Texture>
                            <Texture name="$(parent)VeteranDiffActive" textureFile="/esoui/art/lfg/lfg_veterandungeon_up.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="50" y="50"/>
                            </Texture>
                            <Texture name="$(parent)VeteranDiffInactive" textureFile="/esoui/art/lfg/lfg_veterandungeon_disabled.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="50" y="50"/>
                            </Texture>
                            <Texture name="$(parent)TopDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="230" y="24"/>
                            </Texture>
                            <Texture name="$(parent)BottomDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider_dynamic.dds" alpha="0">
                                <Anchor point="CENTER"/>
                                <Dimensions x="230" y="24"/>
                            </Texture>
                        </Controls>
                     </Control>
                </Controls>
        </TopLevelControl>

    </Controls>
</GuiXml>